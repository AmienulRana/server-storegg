<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/sidebar.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Bank</h3>
                </div>
                <form action="/bank/edit" method="post">
                    <input value="<%= bank?._id %>" type="hidden" name="id" required>
                  <div class="card-body">
                    <div class="form-group">
                      <label for="category">Masukan Nama Pemilik</label>
                      <input value="<%= bank?.name %>" type="text" name="name" class="form-control" placeholder="Masukan Nama Pemilik" required>
                    </div>
                    <div class="form-group">
                      <label for="category">Masukan Nama Bank</label>
                      <input value="<%= bank?.nameBank %>" type="text" name="nameBank" class="form-control" placeholder="Masukan Nama Bank" required>
                    </div>
                    <div class="form-group">
                      <label for="category">Masukan No.Rekening</label>
                      <input value="<%= bank?.noRekening %>" type="text" name="noRekening" class="form-control" placeholder="Masukan No.Rekening" required>
                    </div>
                  </div>
                  <!-- /.card-b ody -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Edit</button>
                  </div>
                </form>
              </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>