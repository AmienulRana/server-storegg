<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/sidebar.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Voucher</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Voucher</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Voucher</h3>
                </div>
                <form action="/voucher/tambah" method="post" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="nameGame">Masukan Nama game</label>
                      <input type="text" name="nameGame" class="form-control" placeholder="Masukan nama game" required>
                    </div>
                    <div class="form-group">
                      <label>Category</label>
                      <select name="category" class="form-control select2" style="width: 100%;">
                        <option selected="selected">Pilih Category</option>
                        <% for( let i = 0; i < category.length; i++ ) { %>
                          <option value="<%= category[i]?._id %>"> <%= category[i]?.name %> </option>
                        <% } %>
                      </select>
                    </div>
                    <div class="form-group">
                      <label>Nominal</label>
                      <div class="select2-purple">
                        <select name="nominals" multiple="multiple" class="form-control select2" style="width: 100%;" data-placeholder="masukan nominal item">
                          <% for( let i = 0; i < nominal.length; i++ ) { %>
                            <option value="<%= nominal[i]?._id %>"> <%= nominal[i].itemQuantity %>   <%= nominal[i]?.itemName %> <%= nominal[i].price %>  </option>
                          <% } %>
                        </select>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="image">Image</label>
                      <input type="file" id="thumbnail" name="thumbnail" class="form-control" required>
                      <br />
                      <img src="" alt="" id="preview" />
                    </div>
                  </div>
                  <!-- /.card-body -->
                  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include('../../partials/footer.ejs') %>


<%- include('../../partials/js.ejs') %>
<script>
  function readImgUrl(input){
    if(input.files && input.files[0]){
      const reader = new FileReader();
      reader.readAsDataURL(input.files[0]);
      reader.onload = () => {
        $("#preview").attr('src', reader.result);
        $("#preview").width("250px");
        //  const preview = document.getElementById('preview');
        //  preview.src = reader.result;
      };
    }
  }
  $("#thumbnail").change(function() {
    readImgUrl(this);
  })
</script>